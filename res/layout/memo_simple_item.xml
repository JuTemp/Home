	<LinearLayout
		android:id="@+id/li1"
		android:layout_width="fill_parent"
		android:layout_height="30pt"
		android:layout_marginTop="10px"
		android:layout_marginLeft="10px"
		android:layout_marginRight="10px"
		android:background="@color/pinkJuTemp">

		<TextView
			android:id="@+id/tv1"
			android:layout_width="fill_parent"
